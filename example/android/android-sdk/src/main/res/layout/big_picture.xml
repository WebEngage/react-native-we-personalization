<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/big_picture_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/we_big_view_margin_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/big_picture_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/we_push_content_margin"
            android:layout_marginLeft="@dimen/we_push_content_margin"
            android:layout_marginEnd="@dimen/we_push_content_margin"
            android:layout_marginRight="@dimen/we_push_content_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/we_push_action_margin"
            />

        <include
            android:id="@+id/action_list"
            layout="@layout/push_action_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
